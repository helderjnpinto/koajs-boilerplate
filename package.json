{
  "name": "koajs-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=dev nodemon --exec npm run babel-node ./src/server.js",
    "babel-node": "babel-node --presets=latest",
    "build": "rimraf dist && npm run prettier  && NODE_ENV=prod babel src -d dist -s",
    "watch": "nodemon",
    "serve-debug": "NODE_ENV=dev nodemon --exec npm run babel-node --inspect ./src/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Nodemon, JsDocs\" -c \"green.bold,blue.bold\" \"npm run serve-debug\"",
    "lint": "eslint --fix src",
    "prettier": "prettier --write \"src/**/*.js\"",
    "start-couchdb": "docker-compose -f ./docker/couchdb/docker-compose.yml up",
    "test": "echo \"Error: no test specified\" && exit 1",
    "install-geth": "MODE='install' node ./scripts/geth.js",
    "gendocs": "./node_modules/.bin/jsdoc -c .jsdoc.conf.json  -t ./node_modules/ink-docstrap/template -R README.md  -r ./src -d ./docs "
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier",
      "plugin:jest/recommended"
    ],
    "env": {
      "jest/globals": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "babel": {
    "presets": [
      "es2017"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helderjnpinto/koajs-boilerplate.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/helderjnpinto/koajs-boilerplate/issues"
  },
  "homepage": "https://github.com/helderjnpinto/koajs-boilerplate#readme",
  "dependencies": {
    "co-body": "^5.1.1",
    "couchdb-promises": "^3.0.0",
    "cradle": "^0.7.1",
    "graphql": "^0.13.2",
    "ink-docstrap": "^1.3.2",
    "koa": "^2.5.0",
    "koa-body": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-combine-routers": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-logger": "^3.2.0",
    "koa-mount": "^3.0.0",
    "koa-parse-json": "^1.0.1",
    "koa-response-time": "^2.0.0",
    "koa-router": "^7.4.0",
    "koa-strong-params": "0.0.3",
    "utils-strings": "^0.1.4",
    "web": "0.0.2",
    "web3": "^1.0.0-beta.33",
    "web3-eth": "^1.0.0-beta.33"
  },
  "devDependencies": {
    "async": "^2.6.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "colors": "^1.2.1",
    "concurrently": "^3.5.1",
    "debug": "^3.1.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "jsdoc": "^3.5.5",
    "nodemon": "^1.17.3",
    "prettier-eslint": "^8.8.1",
    "pretty": "^2.0.0",
    "shelljs": "^0.8.1"
  }
}
